<div class="form-group" align="center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :remote => true) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true,placeholder: "Enter Email", class: 'lgn_text' %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Enter Password", class: 'lgn_text' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in",class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
